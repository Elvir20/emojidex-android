<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:id="@+id/textView"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/testEditText"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emojify"
            android:id="@+id/button"
            android:layout_below="@+id/testEditText"
            android:layout_alignLeft="@+id/testEditText"
            android:onClick="emojifyTest"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deEmojify"
            android:id="@+id/button2"
            android:layout_below="@+id/testEditText"
            android:layout_toRightOf="@+id/button"
            android:onClick="deEmojifyTest"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/button3"
        android:layout_below="@+id/testEditText"
        android:layout_toRightOf="@+id/button2"
        android:onClick="actionSendTest" />

</RelativeLayout>
